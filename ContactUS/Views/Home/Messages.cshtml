@model List<ContactUs.Models.Message>


@{

    var message = TempData["IsSuccess"];
    var  counter = 1;
}

@section style
{
    <style>
        thead th {
            text-align: right;
        }

        thead {
            box-shadow: 0 0 2px 0 gray;
            background: #0000000d;
        }

        body {
            background-image: url('/images/bg-01.jpg');
            background-size: cover;
        }

        
    </style>
}

<div class="container">
    <div class="card">
           
        @if(message != null)
        {
            <div class="alert alert-success">
                    shod
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                nashod
            </div>
        }
        <div class="card-header">
            لیست پیام ها
        </div>
       
        <div class="card-body">
            <table class="table table-bordered text-center">
                <thead>
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>شماره تماس</th>
                    <th>نام و نام خانوادگی</th>
                    <th>پیام</th>
                </tr>
                </thead>
                <tbody>
                
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.Subject</td>
                        <td>
                                <call phone-number="@item.PhoneNumber"></call>
                        </td>
                        <td>@item.FullName</td>
                        <td>@item.MessageBody</td>
                    </tr>

                    counter++;
                }
                   

                </tbody>
            </table>
        </div>
    </div> 
</div>